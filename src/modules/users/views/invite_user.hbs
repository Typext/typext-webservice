<style>
  .container_email img {
    width: 350px;
    padding: 20px;
  }

  .container_email {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .text_email {
    width: 600px;
    padding-top: 15px;
  }

  .text_email h1 {
    color: #F60846;
  }

  .text_email p {
    color: #555555;
  }

  .button_email button {
    margin-top: 20px;
    border: none;
    width: 200px;
    height: 40px;
    border-radius: 5px;
    background-color: #CECFD0;
    cursor: pointer;
    color: #fff;
    font-weight: bold;
  }

  .footer_email {
    margin-top: 70px;
    color: #555555;
  }

  .footer_email h4 {
    color: #F60846;
  }
